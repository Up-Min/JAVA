package data;

public class Fuel {
	
	private int FuelLevel = 100;
	
	public void FuelRecharge(int recharge) {
		System.out.println("기름을 " + recharge + "만큼 보충합니다.");
		this.FuelLevel += recharge;
	}
	
	public void FuelUse(int use) {
		this.FuelLevel -= use;
		System.out.println("기름 " + use + "L 만큼 소비.");
	}

}
