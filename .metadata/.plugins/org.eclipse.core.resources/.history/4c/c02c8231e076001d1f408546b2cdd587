package game;

import data.Fuel;

public class Game_field {
	Fuel F = new Fuel();
	
	public int turn = 0;
	public int PuntureTurn = 0;
	public boolean game_status = true;
	
	public Game_field() {
		if(F.getFuelLevel() == 0) {
			game_status = false;
			System.out.println("기름 부족으로 게임에서 리타이어 했습니다.");
		}
		if(PuntureTurn == 3) {
			game_status = false;
			System.out.println("타이어 펑크로 게임에서 리타이어 했습니다.");
		}
	}
}
