			int tmp = 0;
			
			tmp = ballArr[i];
			ballArr[i] = ballArr[j];
			ballArr[j] = tmp;
		}
		System.out.println(Arrays.toString(ballArr));
		
		System.arraycopy(ballArr, 0, ball3, 0, 3);
		
